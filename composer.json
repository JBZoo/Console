{
    "name"              : "jbzoo/console",
    "type"              : "library",
    "description"       : "Console eases the creation of beautiful and testable command line interfaces for JBZoo libs",
    "license"           : "MIT",
    "keywords"          : ["cli", "console", "process", "command", "command line"],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"             : ">=5.3.10",
        "jbzoo/utils"     : "^1.0",
        "symfony/console" : "^2.8|^3.0",
        "symfony/process" : "^2.8|^3.0"
    },
    "require-dev"       : {
        "jbzoo/phpunit" : "^1.7|1.x-dev"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Console\\" : "src"
        }
    },
    "bin"               : [
        "bin/jbzoo"
    ],
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/Console/issues"
    }
}
